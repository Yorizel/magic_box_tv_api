{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@prisma/*": ["./prisma/client/*"],
      "@src/*": ["./src/*"],
      "@controller/*": ["./src/controller/*"]
    },
    "lib": [
      "es6",
      "dom"
    ]
  }
}